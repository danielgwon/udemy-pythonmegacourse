
<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                id: un
                hint_text: "Username"
            TextInput:
                id: pw
                hint_text: "Password"
            Button:
                text: "Login"
                on_press: root.login(root.ids.un.text, root.ids.pw.text)
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password?"
            Button:
                text: "Sign Up"
                on_press: root.signUp()

<SignupScreen>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign up to be a winner!"
        TextInput:
            id: un
            hint_text: "Username"
        TextInput:
            id: pw
            hint_text: "Password"
        Button:
            text: "Submit"
            on_press: root.addUser(root.ids.un.text, root.ids.pw.text)

<SignupScreenSuccess>:
    GridLayout:
        cols: 1
        Label:
            text: "Sign Up Successful!"
        Button:
            text: "Login page"
            on_press: root.returnToLogin()

<LoginScreenSuccess>:
    GridLayout:
        cols: 1
        Button:
            text: "Logout"
            on_press: root.logout()
        Label:
            text: "How do you feel?"
        TextInput:
            hint_text: "e.g., happy, sad, excited, nervous, ..."
        Button:
            text: "Let's hear it"
        Label:
            text: ""

<RootWidget>:
    LoginScreen:
        name: "loginScreen"
    SignupScreen:
        name: "signupScreen"
    SignupScreenSuccess:
        name: "signupScreenSuccess"
    LoginScreenSuccess:
        name: "loginScreenSuccess"